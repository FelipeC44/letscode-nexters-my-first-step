
    public class QuestionSixth {
    public static void main(String[] args){
    
       String palavra = "slayer";
       char [] capslock = new char[palavra.length()];
        for(int i = 0; i <= palavra.length() - 1; i++) {
            capslock[i] = palavra.charAt(i);
        }
        for (int i = 0; i < palavra.length(); i++){
            if ((i%2) == 1){
            char pm = capslock [i];
            capslock[i] = Character.toUpperCase(pm);
            }
        }
        System.out.println(capslock);
    }
}

