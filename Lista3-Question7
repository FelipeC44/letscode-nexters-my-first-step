import java.util.Scanner;

public class QuestionSeventh {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Digite o nome da primeira pessoa: ");
        String nome1 = sc.next();
        System.out.println("Digite a idade da primeira pessoa: ");
        int idade1 = sc.nextInt();

        System.out.println("Digite o nome da segunda pessoa: ");
        String nome2 = sc.next();
        System.out.println("Digite a idade da segunda pessoa: ");
        int idade2 = sc.nextInt();

        System.out.println("Digite o nome da terceira pessoa: ");
        String nome3 = sc.next();
        System.out.println("Digite a idade da terceira pessoa: ");
        int idade3 = sc.nextInt();

        System.out.println("Digite o nome da quarta pessoa: ");
        String nome4 = sc.next();
        System.out.println("Digite a idade da quarta pessoa: ");
        int idade4 = sc.nextInt();

        System.out.println("Digite o nome da quinta pessoa: ");
        String nome5 = sc.next();
        System.out.println("Digite a idade da quinta pessoa: ");
        int idade5 = sc.nextInt();

        if (idade1 < idade2 && idade1 < idade3 && idade1 < idade4 && idade1 < idade5) {
            System.out.println("A pessoa mais nova é:" + nome1);
            System.out.println("Com idade de: " + idade1);
        } else if (idade2 < idade1 && idade2 < idade3 && idade2 < idade4 && idade2 < idade5) {
            System.out.println("A pessoa mais nova é:" + nome2);
            System.out.println("Com idade de: " + idade2);
        } else if (idade3 < idade1 && idade3 < idade2 && idade3 < idade4 && idade3 < idade5) {
            System.out.println("A pessoa mais nova é:" + nome3);
            System.out.println("Com idade de: " + idade3);
        }
        else if (idade4 < idade1 && idade4 < idade2 && idade4 < idade3 && idade4 < idade5) {
            System.out.println("A pessoa mais nova é:" + nome4);
            System.out.println("Com idade de: " + idade4);
        }
        else if (idade5 < idade1 && idade5 < idade2 && idade5 < idade3 && idade5 < idade4) {
            System.out.println("A pessoa mais nova é:" + nome5);
            System.out.println("Com idade de: " + idade5);
        }
        if (idade1 > idade2 && idade1 > idade3) {
            System.out.println("A pessoa mais velha é: " + nome1);
            System.out.println("Com idade de: " + idade1);
        }
        else if (idade2 > idade1 && idade2 > idade3) {
            System.out.println("A pessoa mais velha é: " + nome2);
            System.out.println("Com idade de: " + idade2);
        }
        else if (idade3 > idade1 && idade3 > idade2) {
            System.out.println("A pessoa mais velha é: " + nome3);
            System.out.println("Com idade de: " + idade3);
        }
        else if (idade4 > idade1 && idade4 > idade2 && idade4 > idade3 && idade4 > idade5) {
            System.out.println("A pessoa mais velha é:" + nome4);
            System.out.println("Com idade de: " + idade4);
        }
        else if (idade5 > idade1 && idade5 > idade2 && idade5 > idade3 && idade5 > idade5) {
            System.out.println("A pessoa mais velha é:" + nome5);
            System.out.println("Com idade de: " + idade5);

        }

    }

}

//Escreva um programa que lê o nome idade de 5 pessoas e ao final
// informa quem é o mais novo, o mais velho e qual a média de idade.
